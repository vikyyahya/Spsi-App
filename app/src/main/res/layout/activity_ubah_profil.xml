<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".register.RegisterActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/spsi" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:text="Ubah Profil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintVertical_bias="0.175">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Nama" />

                <EditText
                    android:id="@+id/et_nama"
                    android:layout_width="251dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:hint="Nama"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="NIK" />

                <EditText
                    android:id="@+id/et_NIK"
                    android:layout_width="251dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:hint="Nik"
                    android:inputType="text"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Bagian" />

                <EditText
                    android:id="@+id/et_bagian"
                    android:layout_width="251dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:hint="Bagian"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Plant" />

                <EditText
                    android:id="@+id/et_plan"
                    android:layout_width="251dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:hint="Plant"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="46dp"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"
                    android:text="Tempat \n Lahir" />

                <EditText
                    android:id="@+id/et_tempat"
                    android:layout_width="251dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:hint="Tempat Lahir"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"
                    android:text="Tanggal \n Lahir" />

                <EditText
                    android:id="@+id/et_tl"
                    android:layout_width="251dp"
                    android:layout_height="39dp"
                    android:clickable="true"
                    android:hint="Tanggal Lahir"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:text="Jenis Kelamin" />

                <EditText
                    android:id="@+id/et_jenis_kel"
                    android:layout_width="251dp"
                    android:layout_height="49dp"
                    android:ems="10"
                    android:hint="Jenis Kelamin"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Agama" />

                <EditText
                    android:id="@+id/et_agama"
                    android:layout_width="251dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:hint="Agama"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Alamat" />

                <EditText
                    android:id="@+id/et_alamat"
                    android:layout_width="251dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:hint="Alamat"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Email" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="251dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="Password" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="251dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_ubah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_solid"
                    android:textAllCaps="false"
                    android:background="@drawable/background_button_primary_rounded_login"
                    android:text="Ubah"></Button>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>